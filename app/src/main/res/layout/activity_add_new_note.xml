<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F89575">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/titleEdit_Note"
            android:inputType="textPersonName"
            android:padding="20dp" />

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="374dp"
            android:layout_height="280dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_drawable_icon_image_gallery" />


        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="15dp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButtonAddPaint"
            android:layout_width="57dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            app:backgroundTint="#E95324"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0"
            app:maxImageSize="40dp"
            app:srcCompat="@drawable/ic_drawable_add" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
